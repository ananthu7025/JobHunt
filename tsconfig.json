{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": false,         // ❌ No .d.ts
    "declarationMap": false,      // ❌ No .d.ts.map
    "sourceMap": false            // ❌ No .js.map
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
